<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaClientMVVM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaClientMVVM.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Админ панель"
        WindowStartupLocation="CenterScreen"
        Width="900" Height="500" CanResize="False">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="6*, 1*">
        <TabControl Grid.Row="0">
            <TabItem Header="Пользователи" VerticalContentAlignment="Center">
                <DataGrid Resources="{Binding Users}"></DataGrid>
            </TabItem>
            <TabItem Header="Роли" VerticalContentAlignment="Center">
                <DataGrid Resources="{Binding Roles}"></DataGrid>
            </TabItem>
        </TabControl>
        <Button Name="ButtonSubmit" Classes="List" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" HorizontalContentAlignment="Center" Content="Выйти"/>
    </Grid>

</Window>
